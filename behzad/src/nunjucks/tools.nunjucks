<section id="tools" class="flexible">
  {% for tool in tools %}
    <article class="tool">
      <picture class="lozad icon" data-src="assets/icon-{{tool.icon}}.png" data-alt="{{tool.title}} Logo Icon">
        <source srcset="assets/icon-{{tool.icon}}.webp" type="image/webp">
      </picture>
      <h1>{{tool.title}}</h1>
      <p>{{tool.description}}</p>
      <a id="{{ tool.title | replace(' ', '_') }}" href="{{tool.link}}">Visit {{tool.title}}</a>
    </article>
  {% endfor %}
</section>
